@model List<string>

@{
    ViewBag.Title = "Conversaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Conversaciones</h2>
<br />
<table class="table">
    <tr class="info">
        <th>
            Conversaciones Activas
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item
        </td>
        <td>
            @Html.ActionLink("Hablar", "Edit",new { id = item })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("+ Nueva Conversación", "Create")
</p>
